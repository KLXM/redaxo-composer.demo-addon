{
    "package": "klxm/redaxo-composer-demo-addon",
    "name": "REDAXO Composer Demo AddOn",
    "description": "Demonstration des modernen REDAXO Composer AddOn Systems",
    "version": "1.5.0",
    "author": "KLXM <info@klxm.de>",
    "supportpage": "https://github.com/klxm/redaxo-composer-demo-addon",
    "requires": {
        "redaxo": "^5.12",
        "php": "^7.4 || ^8.0"
    },
    "pages": {
        "redaxo_composer_demo_addon": {
            "title": "REDAXO Composer Demo",
            "icon": "rex-icon fa-puzzle-piece",
            "subpages": {
                "main": {
                    "title": "Ãœbersicht"
                },
                "settings": {
                    "title": "Einstellungen"
                }
            }
        }
    },
    "default_config": {
        "demo_setting": "Hallo REDAXO Composer!",
        "show_debug": false,
        "api_key": "demo-api-key-12345",
        "max_items": 10,
        "enable_caching": true,
        "cache_lifetime": 3600,
        "allowed_file_types": ["jpg", "png", "gif", "pdf"],
        "notification_email": "admin@example.com",
        "feature_flags": {
            "new_editor": true,
            "experimental_mode": false,
            "analytics": true
        }
    },
    "lifecycle": {
        "install": {
            "directories": ["uploads", "cache", "logs"],
            "database": "install.sql"
        },
        "activate": {
            "message": "Demo AddOn wurde aktiviert"
        },
        "deactivate": {
            "message": "Demo AddOn wurde deaktiviert"
        },
        "uninstall": {
            "cleanup": ["cache/*", "logs/*"],
            "keep_data": true
        }
    }
}
